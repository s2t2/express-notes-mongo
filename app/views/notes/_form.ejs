<form class="form-horizontal" method="post" action="/notes/new">
  <div class="form-group">
    <label for="noteTitle" class="col-sm-2 control-label">Title</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="noteTitle" placeholder="My Note">
    </div>
  </div>

  <div class="form-group">
    <label for="noteDescription" class="col-sm-2 control-label">Description</label>
    <div class="col-sm-10">
      <textarea class="form-control" rows="3" name="noteDescription" placeholder="All the things..."></textarea>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-success">Submit</button>
    </div>
  </div>
</form>

